@using System.Security.Principal

<ul class="navbar-nav">
@if (User.Identity?.IsAuthenticated == true)
{
        <span class="navbar-text text-dark">Zdravím! @User.Identity?.Name</span>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="Account/Logout">Odhlásit se</a>
        </li>
}
else
{
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Přihlásit se</a>
        </li>
}
</ul>
